{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["node_modules", "dist"]
}
